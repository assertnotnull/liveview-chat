<p>Currently chatting in <strong><%= @room_id %></strong></p>

<div id="chat-container">
  <div id="chat-messages" phx-update="append">
    <%= for message <- @messages do %>
      <p id={message.uuid}><%= message.content %></p>
    <% end %>
  </div>

  <%= form_for :chat, "#", [id: "chat-form", phx_submit: :submit_message, phx_change: :form_update], fn f -> %>
    <%= text_input f, :message, value: @message, placeholder: "Enter yout message..." %>
  <% end %>
</div>
